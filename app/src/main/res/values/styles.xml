<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema general de la aplicaciÃ³n -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Color de fondo principal -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryDark">#3700B3</item>
        <item name="colorAccent">#03DAC5</item>
    </style>

    <!-- Estilo para los TextViews -->
    <style name="TextViewStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/fuente_nombre2</item>
        <item name="android:textColor">#333333</item>
    </style>

    <!-- Estilo para los botones -->
    <style name="ButtonStyle">
        <item name="android:backgroundTint">#EE001C</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Estilo para el RecyclerView -->
    <style name="RecyclerViewStyle">
        <item name="android:dividerHeight">2dp</item>
        <item name="android:background">#F5F5F5</item>
    </style>

    <!-- Estilo para la pantalla Splash -->
    <style name="Theme.SuperMario.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Fondo blanco para la pantalla Splash -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- Barra de estado transparente para una experiencia limpia -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Opcional: icono que se puede usar en la Splash si deseas definirlo en este estilo -->
        <item name="android:icon">@drawable/icon</item>
    </style>


</resources>
